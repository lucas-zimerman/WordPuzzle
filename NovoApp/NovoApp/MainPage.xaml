<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovoApp.MainPage">

    <StackLayout>
        <Label Text="END"
               HorizontalOptions="Center"
               IsVisible="False"
               x:Name="EndLabel"/>
        <Entry x:Name="WordEntry"/>
        <Button Clicked="Button_Clicked"/>
        <Label x:Name="ScoreLabel"/>
        <Label x:Name="TimerLabel"/>
        <CollectionView
            x:Name="WordCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout 
                        x:Name="Child"
                        BackgroundColor="DarkGray">
                        <Label 
                           Text="{Binding Word}"
                           IsVisible="False">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding Name}" Value="True">
                                    <Setter Property="IsVisible" Value="True"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
